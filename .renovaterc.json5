{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'local>opentoucan/renovate-config',
  ],
  customManagers: [
    {
      customType: "regex",
      description: "Update Java Version",
      fileMatch: ["(^|.*/)build.gradle.kts$"],
      matchStrings: ["jvmToolchain\\((?<currentValue>.*)\\)"],
      datasourceTemplate: "java-version",
      depNameTemplate: "java",
      extractVersionTemplate: "^(?<version>\\d+)"
    }
  ],
  packageRules: [
    {
      description: ['Java Version Group'],
      groupName: 'Java Version',
      matchDatasources: ['java-version'],
      group: {
        commitMessageTopic: '{{{groupName}}} group'
      }
    },
    {
      description: [
        'Spring Boot Group',
      ],
      groupName: 'SpringBoot',
      matchDatasources: [
        'gradle',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      matchPackageNames: [
        '//^org.springframework.boot//',
      ],
    },
    {
      description: [
        'Kotlin Group',
      ],
      groupName: 'Kotlin',
      matchDatasources: [
        'gradle',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      matchPackageNames: [
        '//^org.jetbrains.kotlin//',
      ],
      minimumGroupSize: 5,
    },
    {
      description: [
        'Kotest Group',
      ],
      groupName: 'Kotest',
      matchDatasources: [
        'gradle',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      matchPackageNames: [
        '//^io.kotest//',
      ],
    },
    {
      matchManagers: [
        'gradle',
      ],
      semanticCommitScope: 'gradle',
      commitMessageTopic: 'gradle {{depName}}',
      addLabels: [
        'renovate/gradle',
      ],
    },
  ],
}
